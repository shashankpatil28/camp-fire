<% layout('layouts/boilerplates')%>

<h1>All Campgrounds</h1>
<div class="mb-3">
    <button class="btn btn-success"> <a href="/campgrounds/new">Add Campground</a></button>
</div>

<% for (let city of data){%>
<div class="card mb-3" >
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=city.Image[0].url%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= city.title %> </h5>
                <p class="card-text"><%= city.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= city.location%></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=city._id%>">View <%=city.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>